@using System.Linq
@model IEnumerable<testingassignment2.Models.CarRental>

@{
    ViewData["Title"] = "Bookings";
}

<h1 class="mb-4">Car Rental Bookings</h1>
<p class="text-muted">Review all scheduled rentals and their contact information.</p>

@if (Model?.Any() != true)
{
    <div class="alert alert-info" role="alert">
        There are no bookings yet. Once customers reserve a vehicle, their reservations will appear here.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Car</th>
                    <th scope="col">Pickup Date</th>
                    <th scope="col">Return Date</th>
                    <th scope="col">Route</th>
                    <th scope="col">Contact</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var rental in Model)
            {
                <tr>
                    <td>@rental.CustomerName</td>
                    <td>
                        @if (rental.Car is not null)
                        {
                            <div class="fw-semibold">@rental.Car.Model</div>
                            <div class="text-muted">@rental.Car.RegistrationNumber</div>
                        }
                        else
                        {
                            <span class="text-muted">Car details unavailable</span>
                        }
                    </td>
                    <td>@rental.StartDate.ToString("d")</td>
                    <td>@rental.EndDate.ToString("d")</td>
                    <td>
                        <div>@rental.PickupLocation</div>
                        <div class="text-muted">&#8594; @rental.DropoffLocation</div>
                    </td>
                    <td>
                        <div>
                            <a href="mailto:@rental.CustomerEmail">@rental.CustomerEmail</a>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(rental.CustomerPhone))
                        {
                            <div>
                                <a href="tel:@rental.CustomerPhone">@rental.CustomerPhone</a>
                            </div>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

<div class="mt-4">
    <a asp-action="Create" class="btn btn-primary">Create New Booking</a>
</div>
